#!/bin/bash -e

dest_prefix=/home/flashrom/cross-libs
lib_src=/home/flashrom/download/libs/pciutils-3.1.5

#. buildbot.conf

old=`pwd`
cd ${lib_src}

for prefix in powerpc-linux-gnu- powerpc64le-linux-gnu- arm-linux-gnueabihf- aarch64-linux-gnu- i386-linux-gnu-; do
	arch=${prefix%-gnu*}
	echo -n $arch
	if [ -e ${dest_prefix}/${arch} ] ; then
		echo " exists already, skipping."
		continue
	fi
	make distclean 2>/dev/null
	make HOST=${arch} CROSS_COMPILE=${prefix} PREFIX= DESTDIR=${dest_prefix}/${arch} ZLIB=no DNS=no install install-lib 2>/dev/null
	echo " successfully installed."
done

cd "$old"
