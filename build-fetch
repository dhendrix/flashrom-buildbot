#!/bin/bash
instance="$1"
compiler="$2"
dest="$3"
shift 3
case "$compiler" in
	i386-openbsd-gcc)
		# This will explode for files with spaces in the name.
		for file in $*; do
			scp -p compiler@192.168.56.11:buildbot/$instance/$file $dest/
		done
		;;
	amd64-netbsd-gcc)
		# This will explode for files with spaces in the name.
		for file in $*; do
			scp -p compiler@192.168.56.10:buildbot/$instance/$file $dest/
		done
		;;
	*)
		cp -a -t "$dest" $*
		;;
esac
